generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username  String   @id @default(uuid())
  password  String
  email     String
  role      String   @default("USER")
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Category {
  category_id   String    @id @default(uuid())
  category_name String
  updatedAt     DateTime  @updatedAt
  createdAt     DateTime  @default(now())
  products      Product[]
}

model Product {
  product_id   String     @id @default(uuid())
  product_name String
  updatedAt    DateTime   @updatedAt
  createdAt    DateTime   @default(now())
  categories   Category[]
  companies    Company[]
  carts        Cart[]

}

model Company {
  company_id   String    @id @default(uuid())
  company_name String
  cnpj         String
  updatedAt    DateTime  @updatedAt
  createdAt    DateTime  @default(now())
  products     Product[]

}

model Cart {
  cart_id   String    @id @default(uuid())
  updatedAt DateTime  @updatedAt
  createdAt DateTime  @default(now())
  products  Product[]
}
