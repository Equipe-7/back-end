generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {

  username  String   @id
  password  String
  email     String
  role      String   @default("USER")
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  carts     Cart[]
}

model Category {
  category_id   String    @id @default(uuid())
  category_name String
  updatedAt     DateTime  @updatedAt
  createdAt     DateTime  @default(now())
  products      Product[]
}

model Product {
  product_id   String     @id @default(uuid())
  product_name String
  updatedAt    DateTime   @updatedAt
  createdAt    DateTime   @default(now())
  categories   Category[]
  companies    Company[]
  carts        Cart[]

}

model Company {
  company_id   String    @id @default(uuid())
  company_name String
  cnpj         String
  updatedAt    DateTime  @updatedAt
  createdAt    DateTime  @default(now())
  products     Product[]
  hotel        String
}

model Cart {

  cart_id   String    @id @default(uuid())
  updatedAt DateTime  @updatedAt
  createdAt DateTime  @default(now())
  products  Product[]
  users     User[]

}

model Services {
  service_id   String   @id @default(uuid())
  service_name String
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())

}

model Vets {
  vet_id    String   @id @default(uuid())
  vet_name  String
  vet_email String   @unique
  vet_tel   String
  crmv      String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Adoption {
  id      String @id @default(uuid())
  name    String
  email   String
  picture String
  species String
  size    String
  tel     String
}
