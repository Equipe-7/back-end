generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {

  username  String   @id
  password  String
  email     String
  role      String   @default("USER")
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  carts     Cart[]
  vets      Vets?
  donor     Donor?
}

model Species {
  species_id   String    @id @default(uuid())
  species_name String
  Product      Product[]
}

model Category {
  category_id   String    @id @default(uuid())
  category_name String
  updatedAt     DateTime  @updatedAt
  createdAt     DateTime  @default(now())
  products      Product[]
}

model Product {
  product_id   String     @id @default(uuid())
  product_name String
  updatedAt    DateTime   @updatedAt
  createdAt    DateTime   @default(now())
  price        Float
  description  String
  urlImage     String
  categories   Category[]
  company      Company?   @relation(fields: [companyId], references: [company_id])
  companyId    String?
  carts        Cart[]
  species      Species[]
}

model Company {
  company_id   String    @id @default(uuid())
  company_name String
  cnpj         String
  updatedAt    DateTime  @updatedAt
  createdAt    DateTime  @default(now())
  hotel        String
  products     Product[]
}

model Cart {

  cart_id   String    @id @default(uuid())
  updatedAt DateTime  @updatedAt
  createdAt DateTime  @default(now())
  quantity  Int
  products  Product[]
  user      User?     @relation(fields: [userId], references: [username])
  userId    String

}

model Services {
  service_id   String   @id @default(uuid())
  service_name String
  price        Float
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())
}

model Vets {
  vet_id    String   @id @default(uuid())
  vet_name  String
  vet_tel   String
  crmv      String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [username])
  userId    String?  @unique
}

model Donor {
  donor_id      String  @id @default(uuid())
  donor_name    String
  donor_email   String
  donor_image   String
  donor_species String
  donor_size    String
  donor_tel     String
  user          User?   @relation(fields: [userId], references: [username])
  userId        String? @unique
}
